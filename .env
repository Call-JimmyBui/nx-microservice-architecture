# .env

# ========================================================
# Cấu hình Database chung (Base for all services)
# Các thông tin kết nối đến PostgreSQL server
# ========================================================
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres

# ========================================================
# Cấu hình Database riêng cho từng Microservice
# Mỗi service sẽ kết nối đến một database có tên riêng biệt
# Đảm bảo bạn đã tạo các database này trong PostgreSQL trước khi chạy ứng dụng
# ========================================================
PRODUCT_DB_DATABASE=product_db
USER_DB_DATABASE=user_db
ORDER_DB_DATABASE=order_db
PAYMENT_DB_DATABASE=payment_db
NOTIFICATION_DB_DATABASE=notification_db
CART_DB_DATABASE=cart_db
DB_SYNCHRONIZE=true # Chỉ dùng cho dev

# ========================================================
# Cấu hình gRPC Microservice Ports
# Mỗi service gRPC lắng nghe trên một cổng riêng
# ========================================================
PRODUCT_SERVICE_GRPC_PORT=50051
USER_SERVICE_GRPC_PORT=50052
ORDER_SERVICE_GRPC_PORT=50053
PAYMENT_SERVICE_GRPC_PORT=50054
NOTIFICATION_SERVICE_GRPC_PORT=50055
CART_SERVICE_GRPC_PORT=50056

# ========================================================
# Cấu hình API Gateway (Cổng REST API)
# Cổng mà API Gateway lắng nghe cho các yêu cầu HTTP/REST từ client
# ========================================================
API_GATEWAY_HTTP_PORT=4000

# ========================================================
# Cấu hình Debugger Ports (để tránh lỗi "address already in use")
# Mỗi service cần một cổng debug riêng biệt
# ========================================================
PRODUCT_SERVICE_DEBUG_PORT=9230
USER_SERVICE_DEBUG_PORT=9231
ORDER_SERVICE_DEBUG_PORT=9232
PAYMENT_SERVICE_DEBUG_PORT=9233
NOTIFICATION_SERVICE_DEBUG_PORT=9234
CART_SERVICE_DEBUG_PORT=9235
API_GATEWAY_DEBUG_PORT=9236

# ========================================================
# Cấu hình Redis (nếu bạn sử dụng Redis cho message broker hoặc cache)
# ========================================================
REDIS_HOST=localhost
REDIS_PORT=6379


# ========================================================
# Cấu hình RabbitMQ (cho message queuing)
# ========================================================
RABBITMQ_HOST=localhost # Hoặc tên service nếu chạy trong cùng Docker Compose network
RABBITMQ_PORT=5672 # Cổng mặc định của RabbitMQ cho AMQP
RABBITMQ_MANAGEMENT_PORT=15672 # Cổng cho giao diện quản lý web
RABBITMQ_USER=guest # Tên người dùng mặc định (thay đổi trong prod)
RABBITMQ_PASSWORD=guest # Mật khẩu mặc định (thay đổi trong prod)

RABBITMQ_ORDER_QUEUE= rabbitMQ_order_queue

# ========================================================
# Cấu hình Emailer
# ========================================================
EMAIL_SERVICE_HOST=smtp.gmail.com
EMAIL_SERVICE_PORT=587
EMAIL_SERVICE_SECURE=false 
EMAIL_SERVICE_USER=sixika1234@gmail.com
EMAIL_SERVICE_PASS=hgbywbxfygsidgjl
EMAIL_FROM=huunhan8705@gmail.com

# ========================================================
# Các biến môi trường khác (ví dụ: keys, secrets cho JWT, Stripe, v.v.)
# ========================================================
JWT_SECRET=your_super_secret_jwt_key
STRIPE_API_KEY=sk_test_your_stripe_api_key